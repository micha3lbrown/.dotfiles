no-more-secrets () {
    eval $(sed -n '/CORE_ENVIRONMENT_KEY/s/.*\(CORE_ENVIRONMENT_KEY\).*||= \(.*\)$/export \1=\2/p' sample_app_env.rb) && eval $(sed -n '/CORE_ACCESS_SECRET/s/.*\(CORE_ACCESS_SECRET\).*||= \(.*\)$/export \1=\2/p' sample_app_env.rb)
    export CORE_DEV_CREDENTIALS="$CORE_ENVIRONMENT_KEY:$CORE_ACCESS_SECRET"
}
